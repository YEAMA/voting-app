{{> header}}

<div class="jumbotron">
    <div class="container">
        <h1>Voting app</h1>
        <p>Create Polls, and vote for others!</p>

        {{#if loggedin}}
        <p><a class="btn btn-primary btn-lg" href="/user/polls" role="button">My Polls</a></p>
        {{^}}
        <p><a class="btn btn-primary btn-lg" href="/signup" role="button">Sign Up</a>
        <a class="btn btn-green btn-lg" href="/login" role="button">Log in</a></p>        
        {{/if}}

    </div>
</div>

<div class="container">
    <div class="row">
    {{#each polls}}
    <a class="btn btn-default btn-block" href="{{url}}">
        {{poll_title}}
    </a>
    {{~/each}}    
    </div>    
</div>


{{> footer}}